<p id="notice"><%= notice %></p>

<h1 style="color: white ; background-color: black; ">Students</h1>

<table class="table" style="color: white">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.age %></td>
        <td><%= link_to 'Show', student, class:'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class:'btn btn-second' %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Asi que quieres borrar, estas seguro de los que vas a hacer?' }, class:'btn btn-warning' %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<br>

